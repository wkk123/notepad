.notepad
  width 1200px
  height 100%
  background #ffffff
  margin 0 auto
  padding 30px 0
  .not-box
    width 600px
    height auto
    margin 0 auto
    background #eeeeee
    .not-title
      width 100%
      height 40px
      line-height 40px
      text-align center
      font-size 28px
      color #ff8140
      padding 15px 0
    .not-search
      width 100%
      height 30px
      margin 0 10px
      margin-bottom 20px
      position relative
      input[type="text"]
        width calc(100% - 137px)
        height calc(100% - 2px)
        border 1px solid #dfdfdf
        color #333333
        font-size 18px
        padding 0 10px
        padding-right 25px
      input[type="button"]  
        margin-left 20px
        width 60px
        height 100%
        border none 
        background #ff8140
        color #ffffff
        font-size 18px
        border-radius 3px
        cursor pointer
        &.not-empty
          position absolute
          background #efefef
          right 105px
          width 20px
          height 20px
          border-radius 10px
          font-size 14px
          top 5px
          display none
          &.active
            display block
    .not-list-box   
      margin 0 10px
      width calc(100% - 20px)
      height auto
      display none 
      &.active
        display block
      .not-list
        width 100%
        height 300px 
        overflow-y auto
        .not-item
          border-bottom 1px solid #dddddd
          width calc(100% - 32px)
          height auto
          font-size 18px
          padding 5px 0
          padding-left 30px
          cursor pointer
          background #52d2c2
          border 1px solid #52d2c2
          border-top 0
          border-bottom 2px solid #efefef
          &:hover
            background #efefef
            border 1px solid #52d2c2
            border-bottom 2px solid #52d2c2
          // &:last-child
          //   border none
          .not-top
            width 100%
            height 30px
            line-height 30px
            color #666666
            .not-time
              width 100px
            .not-name
              width calc(100% - 120px)
              height 30px
              margin-left 20px
          .not-bottom
            color #ffffff
            width 100%
            height 30px
            line-height 30px
          .not-btnbox
            width 100%
            height auto
            padding 5px 0
            input[type="button"] 
              width 60px
              height 30px
              background #ff8140
              color #ffffff
              font-size 18px
              border none    
              float right
              margin-right 60px
              border-radius 3px
              cursor pointer
              &:hover
                background #ff000f
      .not-len
        width calc(100% - 30px)
        height 30px
        line-height 30px
        font-size 20px
        color #ff8140
        text-align center
        padding-right 30px
        margin-top 10px
        background #37dba6
    .not-word
      width calc(100% - 2px)
      height auto
      border 1px solid #dddddd 
      background #ffffff
      display none
      &.active
        display block
      .not-time
        width 100%
        height 30px
        line-height 30px
        color #333333
        font-size 18px
        padding 10px 0
        background #eeeeee
      input[type="text"]
        padding 0 10px
        height calc(100% - 4px)
        border 1px solid #dfdfdf
        color #333333
        font-size 18px
        margin-left 5px
      .time
        width 120px 
        height 100% 
        margin-right 10px
        color #333333
        font-size 18px 
      textarea[name="word"]  
        background #ffffff
        border none 
        width 100%
        height 150px
        overflow-y auto
        resize none
        font-size 18px
        color #333333
        line-height 24px
        text-indent 30px
        padding 10px 0
    .not-btn
      width 100%
      height 30px
      padding 20px 0
      input[type="button"] 
        width 60px
        height 30px
        background #ff8140
        color #ffffff
        font-size 18px
        border none    
        float right
        margin-right 60px
        border-radius 3px
        cursor pointer
        &.active
          display none
        &:hover
          background #ff000f
  .modal
    width 100%
    height 100%
    position fixed
    top 0
    bottom 0
    left 0
    right 0
    background rgba(0,0,0,0.6)        
  .popbox
    width 100%
    height 100%
    position fixed
    top 0
    bottom 0
    left 0
    right 0
    background rgba(0,0,0,0.6)
    display none
    .pop-lixt
      width 300px
      height 160px
      background #ffffff
      position relative
      top 40%
      left 50%
      margin-top -80px
      margin-left -150px
      border-radius 5px
      .pop-header
        width 100%
        height 37px
        border-bottom 1px solid #888888
        .pop-close
          width 30px
          height 30px
          line-height 30px
          text-align center
          font-size 18px
          font-weight bold
          color #888888
          margin-right 5px
          margin-top 4px
          border-radius 3px
          cursor pointer
          &:hover
            background #efefef
      .pop-inner
        width calc(100% - 30px)
        height calc(100% - 103px)
        border-bottom 1px solid #888888
        text-align center
        padding 10px 15px
        .pop-center
          display inline-block
          line-height 24px
          color #333333
      .pop-btn  
        width 100%
        height 44px
        text-align center
        line-height 44px
        .btn-ensure
          width 100px
          height 44px
          line-height 44px
          background #52d2c2
          padding 5px 15px
          border-radius 3px
          color #ffffff
          cursor pointer



        

